<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net8.0;net9.0;net10.0</TargetFrameworks>
        <LangVersion>latest</LangVersion>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <IsPackable>false</IsPackable>

        <!-- Emit generated files for inspection -->
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
        <CompilerGeneratedFilesOutputPath>$(BaseIntermediateOutputPath)\GeneratedFiles</CompilerGeneratedFilesOutputPath>
        <RootNamespace>newtype.tests</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.*"/>
        <PackageReference Include="xunit" Version="2.*"/>
        <PackageReference Include="xunit.runner.visualstudio" Version="2.*"/>

        <!-- Roslyn APIs for in-memory compilation in generator tests -->
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.11.0"/>

        <!-- Reference assemblies for in-memory compilation (includes System.Numerics etc.) -->
        <PackageReference Include="Basic.Reference.Assemblies.Net80" Version="1.8.4" Condition="'$(TargetFramework)' == 'net8.0'"/>
        <PackageReference Include="Basic.Reference.Assemblies.Net90" Version="1.8.4" Condition="'$(TargetFramework)' == 'net9.0'"/>
        <PackageReference Include="Basic.Reference.Assemblies.Net100" Version="1.8.4" Condition="'$(TargetFramework)' == 'net10.0'"/>
    </ItemGroup>

    <ItemGroup>
        <!-- Analyzer reference: feeds generator to the build-time Roslyn host (powers integration tests) -->
        <ProjectReference Include="..\NewType.Generator\NewType.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" SetTargetFramework="TargetFramework=netstandard2.0"/>

        <!-- Assembly reference: lets test code instantiate AliasGenerator directly -->
        <ProjectReference Include="..\NewType.Generator\NewType.Generator.csproj" SetTargetFramework="TargetFramework=netstandard2.0"/>
    </ItemGroup>

</Project>
